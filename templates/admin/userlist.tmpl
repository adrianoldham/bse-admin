<:wrap admin/base.tmpl title=>"Admin Users" :>
<div class="window">
  <h1><:param title:></h1>
  <p class="buttons">
    <a href="<:script:>?a_groups=1" class="button gray small">Groups</a>
    <:- if UserCan bse_admin_user_add:>
    <a href="<:script:>?a_adduserform=1" accesskey="u" title="AccessKey = u" class="button blue small">Add User</a>
    <:- or UserCan:><:eif UserCan:>
  </p>
  <:- if Users:>
  <fieldset class="list">
    <legend>Accounts</legend>
    <table class="full list">
      <thead>
        <tr>
          <th>Username</th>
          <th>Full Name</th>
          <th>Groups</th>
          <th><!--Actions--></th>
        </tr>
      </thead>
      <tbody>
        <:- iterator begin users:>
        <tr>
          <td><:iuser logon:></td>
          <td><:iuser name:></td>
          <td><:ifUser_groups iuser:><:iterator begin user_groups iuser:><:user_group name:><:iterator separator user_groups:>, <:iterator end user_groups:><:or:>(none)<:eif:></td>
          <td class="actions">
            <a href="<:script:>?a_showuser=1&amp;userid=<:iuser id:>" class="button gray small">Edit</a>
            <:- if UserCan bse_admin_user_del:>
            <a href="<:script:>?a_deluser=1&amp;userid=<:iuser id:>" onclick="return window.confirm('Are you sure you want to delete this User?');" class="button red small">Delete</a>
            <:- or UserCan:>
            <a class="button red small disabled">Delete</a>
            <:- eif UserCan:>
          </td>
        </tr>
        <:- iterator end users:>
      <tbody>
    </table>
  </fieldset>
  <:- or Users:>
  <p>No admin users created.</p>
  <:- eif Users:>
</div>