<:wrap admin/base.tmpl title=>"Import Article Data" :>
<:-.if profile_errors.size:>
<div id="message">
  <div class="message error red">
    <:-.for m in profile_errors:>
    <div><:= m | html :></div>
    <:-.end for:>
  </div>
</div>
<:-.end if:>
<div class="window dialog">
  <header>
    <h1><:= params.title:></h1>
  </header>
  <form action="<:adminurl importer:>" method="post" enctype="multipart/form-data" data-object="Import" data-confirm="false">
    <input type="hidden" name="r" value="<:cgi r:>" />
    <:csrfp bse_admin_import hidden:>
    <fieldset>
      <legend>Selection</legend>
      <div>
        <label for="file">Data file <span class="required">*</span> <:error_img file:></label>
        <span>
          <input type="file" name="file" id="file" accesskey="f" title="AccessKey = f" autofocus="autofocus" class="<:ifError_img file:>error<:eif:>" />
          <:help userupdate file:>
        </span>
      </div>
      <div>
        <label for="profile">Profile <span class="required">*</span> <:error_img profile:></label>
        <span>
          <:.call "make_select", "name": "profile", "required": "required", "list": profiles, "id": "id", "desc": "label", "default": cgi.param('profile') :>
          <:help importer profile:>
        </span>
      </div>
    </fieldset>
    <p class="buttons">
      <a href="<:switch:><:case Cgi r:><:cgi r:><:case And [cgi referer] [referer]:><:replace [referer] "&amp;referer=[0-9]+":><:case default:><:adminurl menu:><:endswitch:>" accesskey="." title="AccessKey = ." data-action="Cancel" class="button white">Cancel</a>
      <:- if UserCan bse_admin_import:>
      <input type="submit" name="a_import" value="Import Data" accesskey="i" title="AccessKey = i" class="button green" />
      <:- eif UserCan:>
    </p>
  </form>
</div>