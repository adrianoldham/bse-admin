      <:-.if custom.size :>
      <:-.set object = 0 :>
      <fieldset>
        <legend><:= cfg.entry("article custom fields", "legend", "Custom") :></legend>
        <:-.for field in custom.list:>
        <div>
          <label for="<:= field.key :>">
            <:= field.value.description :>
            <:-.call "required_indicator", "required":field.value.required :>
            <:-.call "error_img", "name":field.key -:>
          </label>
          <span>
            <:-.set default = cgi.param(field.key) ? cgi.param(field.key) : ifnew ? field.value.default : article.get(field.key) :>
            <:-.set is_disabled = not(ifnew or request.user_can("edit_field_edit_" _ field.key, article)) :>
            <:-.if field.value.htmltype eq "select" :>
            <:-# the field config code uses an older mechanism, translate :>
            <:-.set list = [] -:>
            <:-.set baselist = field.value["values"] -:>
            <:-.for i in baselist :>
              <:-% list.push({ "id": i[0], "label": i[1] }) :>
            <:-.end for :>
            <:.call "make_select", "name":field.key, "list":list, "id":"id", "desc":"label", "default":default, "required":field.value.required, "options": { "disabled":is_disabled } :>
            <:-.else :>
            <:.call "input", "name":field.key, "field": { "description":field.value.description, "default":default, "type":field.value.type, "htmltype":field.value.htmltype, "required":field.value.required }, "options": { "placeholder":field.value.placeholder, "disabled":is_disabled } :>
            <:-.end if :>
          </span>
        </div>
        <:-.end for:>
      </fieldset>
      <:-.end if :>