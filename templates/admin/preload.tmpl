<:-.define messages -:>
  <:-.if request.messages.size :>
    <div id="message">
      <:-.for message in request.messages :>
      <div class="message <:= message.class :> <:-= message.class eq 'error' ? ' red' : message.class eq 'warning' ? ' orange' : ' green' :>">
        <:-= message.html -:>
      </div>
      <:-.end for :> 
    </div>
  <:-.end if :>
<:-.end define :>

