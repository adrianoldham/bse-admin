<:wrap admin/base.tmpl title=>"New User Group File" :>
<div class="window dialog">
  <h1><:param title:></h1>
  <form action="<:script:>" method="post" enctype="multipart/form-data">
    <input type="hidden" name="id" value="<:group id:>" />
    <:csrfp admin_group_add_file hidden:>
    <input name="r" type="hidden" value="<:switch:><:case Cgi r:><:cgi r:><:case default:><:script:>?a_editgroup=1&amp;id=<:group id:><:endswitch:>" />
    <fieldset>
      <legend>Resource</legend>
      <div>
        <label for="file">File <span class="required">*</span> <:error_img file:></label>
        <span>
          <input type="file" name="file" id="file" accesskey="f" title="AccessKey = f" required="required" class="<:ifError_img file:>error<:or:><:eif:>" />
          <:help editgroup file:>
        </span>
      </div>
      <div>
        <label for="category">Category <:error_img category:></label>
        <span>
          <:replace [userfile_category] "name=\"([a-z A-Z _]+)\"" "name=\"$1\" id=\"$1\"":>
          <:help editgroup category:>
        </span>
      </div>
      </fieldset>
      <fieldset>
      <legend>Content</legend>
       <div>
        <label for="title">Description <:error_img title:></label>
        <span>
          <input type="text" name="title" id="title" value="<:old title:>" class="<:ifError_img title:>error<:or:><:eif:>" />
          <:help editgroup title:>
        </span>
      </div>
      <div>
        <label for="body">Notes <:error_img body:></label>
        <span>
          <textarea name="body" id="body" class="<:ifError_img body:>error<:or:><:eif:>"><:old body:></textarea>
          <:help editgroup body:>
        </span>
      </div>
    </fieldset>
    <fieldset>
      <legend>Last Modified</legend>
      <div>
        <label for="modwhen_date">Date <:error_img modwhen_date:></label>
        <span>
          <input type="text" name="modwhen_date" id="modwhen_date" value="<:old modwhen_date:>" placeholder="DD/MM/YYYY" />
          <:help editgroup modwhen_date:>
        </span>
      </div>
       <div>
        <label for="modwhen_time">Time <:error_img modwhen_time:></label>
        <span>
          <input type="text" name="modwhen_time" id="modwhen_time" value="<:old modwhen_time:>" placeholder="HH:MM:SS" class="<:ifError_img modwhen_time:>error<:or:><:eif:>" />
          <:help editgroup modwhen_time:>
        </span>
      </div>
    </fieldset>
    <fieldset>
      <legend>Properties</legend>
      <div>
        <label for="content_type">Content type <:error_img content_type:></label>
        <span>
          <input type="text" name="content_type" id="content_type" value="<:old content_type:>" placeholder="MIME format" class="<:ifError_img content_type:>error<:or:><:eif:>" />
          <:help editgroup content_type:>
        </span>
      </div>
      <div>
        <label for="download">Force download <:error_img download:></label>
        <span>
          <input type="checkbox" name="download" id="download" value="1" <:ifOld download:>checked="checked" <:or:><:eif:>/>
          <:help editgroup download:>
        </span>
      </div>
    </fieldset>
    <p class="buttons">
      <a href="<:switch:><:case Cgi r:><:cgi r:><:case Cgi referer:><:referer:><:case default:><:script:>?a_editgroup=1&amp;id=<:group id:><:endswitch:>" accesskey="." title="AccessKey = ." class="button gray">Cancel</a>
      <:if UserCan bse_members_group_add_file:>
      <input type="submit" name="a_addgroupfile" value="Upload file" accesskey="u" title="AccessKey = u" class="button green" />
      <:or UserCan:><:eif UserCan:>
    </p>
  </form>
</div>
