<:wrap admin/base.tmpl title=>"Edit User Group" :>
<div class="window dialog">
  <h1><:param title:></h1>
  <p class="buttons">
    <:- if UserCan bse_members_user_list:>
    <a href="<:script:>?a_groupmemberform=1&amp;id=<:group id:>" class="button gray small">Members</a>
    <:- or UserCan:><:eif UserCan:>
    <!--
    <:- if Groupfiles:>
    <a href="<:script:>?a_editgroup=1&amp;id=<:group id:>&amp;_t=files" class="button gray small">Files</a>
    <:- or Groupfiles:><:eif Groupfiles:>
    -->
    <:- if UserCan bse_members_group_add_file:>
    <a href="<:script:>?a_addgroupfileform=1&amp;id=<:group id:>" accesskey="f" title="AccessKey = f" class="button blue small">Add File</a>
    <:- or UserCan:><:eif UserCan:>
    <:- if UserCan bse_members_group_delete:>
    <a href="<:script:>?a_deletegroup=1&amp;id=<:group id:>" accesskey="d" title="AccessKey = d" onclick="return window.confirm('Are you sure you want to delete this Group?');" class="button red small">Delete</a>
    <:- or UserCan:>
    <a class="button red small disabled">Delete</a>
    <:- eif UserCan:>
  </p>
  <form action="<:script:>" method="post">
    <input type="hidden" name="id" value="<:group id:>" />
    <input type="hidden" name="r" value="<:cgi r:>" />
    <fieldset>
      <legend>Group</legend>
      <div>
        <label for="name">Name <span class="required">*</span> <:error_img name:></label>
        <span>
          <input type="text" name="name" id="name" value="<:old name group name:>" required="required" class="<:ifError_img name:>error<:or:><:eif:>" />
          <:help editsiteuser name:>
        </span>
      </div>
    </fieldset>
    <!--
    <:- if UserCan bse_members_user_list:>
    <:- if Siteusers:>
    <fieldset>
    <legend>Members</legend>
      <ul>
        <:- iterator begin siteusers:>
        <li>
          <input type="hidden" name="set_is_member" value="<:siteuser id:>" />
          <input type="checkbox" name="is_member" id="userid_<:siteuser id:>" value="<:siteuser id:>" <:ifMember:>checked="checked" <:or:><:eif:>/>
          <label for="userid_<:siteuser id:>"><a href="<:script:>?a_edit=1&amp;id=<:siteuser id:>"><:siteuser userId:></a><:ifOr [siteuser name1] [siteuser name2]:> (<:siteuser name1:> <:siteuser name2:>)<:or:><:eif:></label>
        </li>
        <:- iterator end siteusers:>
      </ul>
    </fieldset>
    <:- or Siteusers:><:eif Siteusers:>
    <:- or UserCan:><:eif UserCan:>
    -->
    <:- if Groupfiles:>
    <fieldset>
      <legend>Files</legend>
      <ul class="children groupfiles">
        <:- iterator begin groupfiles:>
        <li>
          <a href="<:target user downufile id [groupfile id]:>" title="<:groupfile title:>"><span class="listed <:switch:><:case default:>green<:endswitch:>"></span> <:groupfile display_name:></a>
          <span>
            <:- if UserCan bse_members_group_edit_file:>
            <a href="<:script:>?a_editgroupfile=1&amp;id=<:group id:>&amp;file_id=<:groupfile id:>" class="button gray small">Edit</a>
            <:- or UserCan:>
            <a class="button gray small disabled">Edit</a>
            <:- eif UserCan:>
            <:- if UserCan bse_members_group_del_file:>
            <a href="<:script:>?a_delgroupfile=1&amp;id=<:group id:>&amp;file_id=<:groupfile id:>&amp;_csrfp=<:csrfp admin_group_del_file:>" onclick="return window.confirm('Are you sure you want to delete this File?')" class="button red small">Delete</a>
            <:- or UserCan:>
            <a class="button red small disabled">Delete</a>
            <:- eif UserCan:>
          </span>
        </li>
        <:- iterator end groupfiles:>
      </ul>
    </fieldset>
    <:- or Groupfiles:><:eif Groupfiles:>
    <p class="buttons">
      <a href="<:switch:><:case Cgi r:><:param r:><:case Cgi referer:><:referer:><:case default:><:script:>?a_grouplist=1<:endswitch:>" accesskey="." title="AccessKey = ." class="button gray">Done</a>
      <:- if UserCan bse_members_group_edit:>
      <input type="submit" name="a_savegroup" value="Save changes" accesskey="s" title="AccessKey = s" class="button green" />
      <:- or UserCan:><:eif UserCan:>
    </p>
  </form>
</div>